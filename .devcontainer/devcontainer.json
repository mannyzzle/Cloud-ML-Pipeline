{
  "name": "Satellite Dev Container",
  "dockerFile": "Dockerfile",
  "forwardPorts": [5000, 3000],
  "postCreateCommand": ". /workspace/venv/bin/activate && pip install --no-cache-dir -r requirements.txt",
  "runArgs": [
    "--env-file",
    ".env",
    "--privileged" // Required for Docker-in-Docker functionality
  ],
  "features": {
    "docker-in-docker": "latest"
  },
  "containerEnv": {
    "DOCKER_BUILDKIT": "1",
    "COMPOSE_DOCKER_CLI_BUILD": "1"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "docker.host": "unix:///var/run/docker.sock",
        "remote.containers.dockerPath": "/usr/bin/docker"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
